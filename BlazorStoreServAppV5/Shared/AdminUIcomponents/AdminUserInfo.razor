@inherits MainLayout
@if (MyUser != null)
{
    <section >
        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-2 ">
                    <div class="card-body text-center">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                             class="rounded-circle img-fluid" style="width: 150px;">
                        <h5 class="my-3">@MyUser.FirstName @MyUser.LastName</h5>
                        <p class="text-muted mb-1">SomeInfo</p>
                        <p class="text-muted mb-4">@MyUser.Address</p>
                        <div class="d-flex justify-content-center mb-2">
                            <button type="button" class="btn btn-primary">IDK what it will be</button>
                            <button type="button" class="btn btn-outline-primary ms-1">Same as above</button>
                        </div>
                    </div>
                </div>
                <div class="card mb-2 mb-lg-0">
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush rounded-3">
                            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <i class="fas fa-globe fa-lg text-warning"></i>
                                <p class="mb-0">smth</p>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <i class="fab fa-github fa-lg" style="color: #333333;"></i>
                                <p class="mb-0">smth</p>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <i class="fab fa-twitter fa-lg" style="color: #55acee;"></i>
                                <p class="mb-0">smth</p>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <i class="fab fa-instagram fa-lg" style="color: #ac2bac;"></i>
                                <p class="mb-0">smth</p>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <i class="fab fa-facebook-f fa-lg" style="color: #3b5998;"></i>
                                <p class="mb-0">smth</p>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card mb-2">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Full Name</p>
                            </div>
                            <div class="col-sm-8">
                                <p class="text-muted mb-0">@MyUser.FirstName @MyUser.LastName</p>
                            </div>
                            <div class="col-1">
                                <button class="myButton" @onclick="()=>MyUser=null">X</button>
                            </div>
                        </div>
                        
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Email</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@MyUser.Email</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Phone</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@MyUser.Phone</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Mobile</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">2d phone</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Address</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@MyUser.Address</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-4 mb-md-0">
                            <div class="card-body">
                                <p class="mb-4">
                                    <span class="text-primary font-italic me-1"></span> My orders
                                </p>
                                @foreach (var order in MyUser.Orders)
                                {
                                    <p class="mb-1" style="font-size: .77rem;">Order @order.Id, Status of order: @order.IsCanceled </p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
}

@code {

    [Parameter]
    public string Visible { get; set; }

    [Parameter]
    public Users MyUser { get; set; }

    [Parameter]
    public Type MyType { get; set; }


}