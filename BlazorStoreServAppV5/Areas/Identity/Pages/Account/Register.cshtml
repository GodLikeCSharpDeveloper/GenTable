@page "/identity/account/register"
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BlazorStoreServAppV5.Areas.Identity.Pages.Account.RegisterModel

<div class="container align-items-center justify-content-center">
    <div class="row text-center">
        <div class="col">

            @if (Model.IsUserRegistrationSuccessfull)
            {
                <div class="alert" role="alert">
                    Registered Successfuly, now click here to login
                </div>
            }
        </div>
    </div>
    <div class="row align-self-center" style="margin-top: 15%;">
        <div class="col-md-6 offset-md-3">
            <form method="POST">
                <legend>User Registration</legend>
                <div class="mb-3">
                    <label for="txtEmail" class="form-label ">Email</label>
                    <input asp-for="RegisterForm.Email" type="text" class="form-control" id="txtEmail"/>
                    @if (Model.ErrorMessage!=null&&Model.ErrorMessage.Any(x=>x.Contains("mail")))
                    {
                        <label class="AlertMessage bi-exclamation-triangle-fill" role="">
                            @Model.ErrorMessage.Where(x => x.Contains("mail")).FirstOrDefault()
                        </label>
                    }
                </div>
                <div class="mb-3">
                    <label for="txtFirstName" class="form-label">First Name</label>
                    <input asp-for="RegisterForm.FirstName" type="text" class="form-control" id="txtFirstName"/>
                </div>
                <div class="mb-3">
                    <label for="txtLastName" class="form-label">Last Name</label>
                    <input asp-for="RegisterForm.LastName" type="text" class="form-control" id="txtLastName"/>
                </div>
                <div class="mb-3">
                    <label for="txtPassword" class="form-label">Password</label>
                    <input asp-for="RegisterForm.Password" type="password" class="form-control" id="txtPassword"/>
                    @if (Model.ErrorMessage!=null&&Model.ErrorMessage.Any(x=>x.Contains("Password")))
                    {
                        <label class="AlertMessage bi-exclamation-triangle-fill" role="">
                            @Model.ErrorMessage.Where(x => x.Contains("Password")).FirstOrDefault()
                        </label>
                        <br/>
                    }
                    @if (Model.ErrorMessage != null && Model.ErrorMessage.Any(x => x.Contains("Must")))
                    {
                        <label class="AlertMessage bi-exclamation-triangle-fill" role="">
                            @Model.ErrorMessage.Where(x => x.Contains("Must")).FirstOrDefault()
                        </label>
                    }
                </div>
                <div class="mb-3">
                    <label for="txtConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="RegisterForm.ConfirmPassword" type="password" class="form-control"
                           id="txtConfirmPassword"/>
                    @if (Model.ErrorMessage!=null&&Model.ErrorMessage.Any(x=>x.Contains("Confirm")))
                    {
                        <label class="AlertMessage bi-exclamation-triangle-fill" role="">
                            @Model.ErrorMessage.Where(x => x.Contains("Confirm")).FirstOrDefault()
                        </label>
                    }
                </div>

                <div class="col position-absolute">
                    <button type="submit" class="btn btn-primary position-absolute" style="">Register</button>
                </div>
            </form>
        </div>

    </div>
</div>